{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "The Tortoise",
    "version": "0.6.0"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.thetortoise.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "The Tortoise",
        "width": 1440
      },
      {
        "label": "editor",
        "fullscreen": false,
        "height": 480,
        "resizable": true,
        "title": "Scenario Editor",
        "width": 720
      }
    ]
  }
}